<div class="container">	

    <h2><%= title %></h2>
    
	<% let isCodeInput = (title === '코드 입력'); %> <!-- title이 '코드 입력'인지 여부를 저장하는 변수 -->

	<form action="<%= isCodeInput ? '/code/create_process' : '/code/update_process' %>" method="post">
		<% if (isCodeInput) { %>
			<div class="mb-3">
				<label class="form-label" for="id">대분류</label> 
				<input class="form-control" type="text" name="main_id" style="width:300px;" />
			</div>
		<% } else { %>
			<input type="hidden" name="main_id" value="<%=main%>" />
		<% } %>
		

        <div class="mb-3" >
			<label class="form-label" for="id">대분류명</label> 
			<input class="form-control" type="text" value="<%=main_name%>" name="main_name" style = "width:300px;" />
		</div>	

		<% if (isCodeInput) { %>
			<div class="mb-3">
				<label class="form-label" for="id">소분류</label> 
				<input class="form-control" type="text" name="sub_id" style="width:300px;" />
			</div>
		<% } else { %>
			<input type="hidden" name="sub_id" value="<%=sub%>" />
		<% } %>	
		

        <div class="mb-3">
			<label class="form-label" for="id">소분류명</label> 
			<input class="form-control" type="text" value="<%=sub_name%>" name="sub_name" style="width:300px;" />
		</div>

        <div class="mb-3">
			<label class="form-label" for="id">시작일</label> 
			<input class="form-control" type="text" value="<%= start %>" name="start" id="start" style="width:300px;" <%= isCodeInput ?  '':'readonly' %> />
		</div>
        <div class="mb-3">
			<label class="form-label" for="id">종료일</label> 
			<input class="form-control" type="text" value="<%=end%>" name="end" id="end" style="width:300px;" />
		</div>
		
			<button class="btn btn-outline-primary btn-sm" type="submit">
				<% if (isCodeInput) { %> 
					입력 
				<% }else { %>
					수정
				<% } %> 
			</button>
		 
	
		<a href="/code/view" class="btn btn-outline-primary btn-sm">코드 목록 돌아가기</a>
        <!-- <button class="btn btn-outline-primary btn-sm" type="submit">수정</button> -->
    </form>
</div>
