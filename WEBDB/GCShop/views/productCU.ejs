<div class="container">	
    <script>
        function displayFileName(){
            var fileName = $("#file").val();
            $(".upload-name").val(fileName);
        }
    </script>
	 
    <% if(method === 'create') {%> 
        <h2>상품 입력</h2>
    <% } else { %> 
        <h2>상품 수정 </h2>
    <% } %> 


    <% if(method === 'create') { %> 
	    <form action="/product/create_process" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
    <% } else { %> 
        <form action="/product/update_process" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
    <% } %> 

		<div class="mb-3">
			<label class="form-label" for="id_main">카테고리 </label> 
            <select name="category" id="id_main">
                <% for (let i = 0; i < codes.length; i++) { %> 
                    <%
                    var selected = ''; 
                     if (product != '' && codes[i].main_id === product[0].main_id && codes[i].sub_id === product[0].sub_id) {  
                        selected = 'selected'; 
                     }
                    %> 
                    <option value="<%= codes[i].main_id + codes[i].sub_id %>" <%= selected ? 'selected' : '' %>><%= codes[i].main_name %> : <%= codes[i].sub_name %></option>
                <% } %> 
            </select>
		</div>

        
        <table>
        <tr>
            <td>
            <% if(method === 'update') { %> 
                <input type="text" value="<%= product[0].mer_id %>" name="mer_id" hidden />
            <% } %> 
        <div class="mb-3">
			<label class="form-label" for="id">제품명</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].name: "" %>" name="name" style = "width:300px;" />
		</div>
        </td>
        <td width = "30px"></td>
        <td>
        <div class="mb-3">
			<label class="form-label" for="id">가격</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].price:"" %>" name="price" style="width:300px;" />
		</div>
        </td>
        </tr>
        <tr><td>
        <div class="mb-3">
			<label class="form-label" for="id">재고</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].stock:"" %>" name="stock" style="width:300px;" />
		</div></td><td width = "30px"></td><td>
        <div class="mb-3">
			<label class="form-label" for="id">브랜드</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].brand:"" %>" name="brand" style="width:300px;" />
		</div></td>
        </tr>
        <tr><td>
        <div class="mb-3">
			<label class="form-label" for="id">공급자</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].supplier:"" %>" name="supplier" style="width:300px;" />
		</div></td><td width = "30px"></td><td>
        <div class="mb-3">
			<label class="form-label" for="id">할인여부</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].sale_yn:"" %>" name="sale_yn" style="width:300px;" />
		</div></td>
        </tr>
        <tr>
        <td>
        <div class="mb-3">
			<label class="form-label" for="id">할인가격</label> 
			<input class="form-control" type="text" value="<%= (product != '') ? product[0].sale_price:"" %>" name="sale_price" style="width:300px;" />
		</div>
        </td><td width = "30px"></td>
        <td>
        </td>
        </tr>
        </table>
        <div class="mb-3">
            <input class="upload-name" value="<%= (product != '') ?  product[0].image:"" %>" name = "image" placeholder="이미지파일">
            <input type="file" id="file" name="uploadFile" onchange="displayFileName()">
        </div>
        <button class="btn btn-outline-primary btn-sm" type="submit"><%= (method === 'create') ? '입력' : '수정' %></button>
        &nbsp;&nbsp;&nbsp;
        <a href="/product/view"><button class="btn btn-outline-primary btn-sm" type="button">제품목록 돌아가기</button></a>
    
  </form>
        
</div>
