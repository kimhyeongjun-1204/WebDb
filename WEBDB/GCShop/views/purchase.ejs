<table class="table table-bordered " style="text-align: center;">
    <thead class="table-primary ">
        <tr><th>상품</th><th>상품명</th><th>단가</th><th>구매량</th><th>총금액</th><th>구매일</th><th>취소여부</th></tr>
    </thead> 

    <tbody>
        <% if(purchases && purchases.length > 0) { %> 
            <% for(let i=0;i<purchases.length;i++) { %> 
                <tr>
                    <td><img src="/<%= purchases[i].image %>" style="width:100px; height:100px;" alt="Image"></td> <!-- 이미지-->
                    <td><%= purchases[i].product_name %></td> <!-- 상품명 -->
                    <td><%= purchases[i].price %> 원</td>
                    <td><%= purchases[i].qty %></td>
                    <td><%= purchases[i].total %> 원</td>
                    <td><%= purchases[i].date %></td>
                    <td>
                        <% if(purchases[i].cancel === 'Y') { %> 
                            취소된 상품 
                        <% } else {%>
                            <a href="/purchase/cancel/<%= purchases[i].purchase_id %>">구매 취소</a>
                        <% } %> 
                    </td> <!-- N이면 구매취소(onclick), Y이면 취소된 상품 -->
                </tr>
            <% } %> 
        <% }else { %> 
            <tr><td colspan="7">구매한 상품이 없습니다!!!</td></tr>
        <% } %> 
    </tbody>
</table>